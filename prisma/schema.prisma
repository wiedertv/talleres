generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id                 String              @id @default(uuid())
  name               String
  owner              User                @relation("OrganizationOwner", fields: [ownerId], references: [id])
  ownerId            String              @unique
  users              User[]              @relation("OrganizationUsers")
  clients            Client[]
  vehicles           Vehicle[]
  services           Service[]
  parts              Part[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  inventoryMovements InventoryMovement[]

  @@map("organizations")
}

model User {
  id                String         @id @default(uuid())
  name              String
  email             String         @unique
  password          String
  role              Role           @default(MECHANIC)
  avatar            String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @default(now())
  partsSales        PartsSale[] // Puede vender pero no es due帽o del inventario
  subscription      Subscription[]
  organization      Organization?  @relation("OrganizationUsers", fields: [organizationId], references: [id])
  organizationId    String?
  ownedOrganization Organization?  @relation("OrganizationOwner")
  services          Service[]      @relation("ServiceAssignedTo") //  Este es el que debes dejar

  @@map("users")
}

model Subscription {
  id        String           @id @default(uuid())
  user      User             @relation(fields: [userId], references: [id])
  userId    String
  plan      SubscriptionPlan @relation(fields: [planId], references: [id])
  planId    String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean          @default(true)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("subscriptions")
}

model SubscriptionPlan {
  id            String         @id @default(uuid())
  name          String
  description   String?
  price         Float
  duration      Int // Duraci贸n en d铆as
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]

  @@map("subscription_plans")
}

model Client {
  id             String          @id @default(uuid())
  name           String
  type           ClientType
  email          String?
  phone          String
  address        String?
  ci             String?
  rif            String?
  notes          String?
  points         Int             @default(0)
  level          LoyaltyLevel    @default(BRONZE)
  avatar         String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  vehicles       VehicleClient[] // Relaci贸n muchos a muchos
  partsSales     PartsSale[]
  services       Service[]
  organization   Organization    @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("clients")
}

model Vehicle {
  id             String          @id @default(uuid())
  plate          String          @unique
  vin            String?
  make           String
  model          String
  year           Int
  color          String?
  mileage        Int?
  notes          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  clients        VehicleClient[] // Relaci贸n muchos a muchos
  services       Service[]
  partsSales     PartsSale[]
  organization   Organization    @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("vehicles")
}

model VehicleClient {
  id        String    @id @default(uuid())
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId String
  client    Client    @relation(fields: [clientId], references: [id])
  clientId  String
  broughtAt DateTime  @default(now())
  services  Service[]

  @@unique([vehicleId, clientId, broughtAt])
  @@map("vehicle_clients")
}

model Service {
  id              String         @id @default(uuid())
  type            ServiceType
  description     String
  status          ServiceStatus  @default(PENDING)
  startDate       DateTime
  endDate         DateTime?
  total           Float
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  vehicle         Vehicle?       @relation(fields: [vehicleId], references: [id])
  vehicleId       String?
  assignedTo      User           @relation("ServiceAssignedTo", fields: [assignedToId], references: [id]) //  Relaci贸n nombrada
  assignedToId    String
  serviceItems    ServiceItem[]
  partsUsed       PartUsage[]
  vehicleClient   VehicleClient? @relation(fields: [vehicleClientId], references: [id])
  vehicleClientId String?
  client          Client?        @relation(fields: [clientId], references: [id])
  clientId        String?
  organization    Organization   @relation(fields: [organizationId], references: [id])
  organizationId  String

  @@map("services")
}

model ServiceItem {
  id          String  @id @default(uuid())
  description String
  price       Float
  service     Service @relation(fields: [serviceId], references: [id])
  serviceId   String

  @@map("service_items")
}

model Part {
  id                 String              @id @default(uuid())
  code               String              @unique
  name               String
  description        String?
  price              Float
  stock              Int                 @default(0)
  category           PartCategory
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  partsSales         PartsSale[]
  partsUsed          PartUsage[]
  saleItems          SaleItem[]
  inventoryMovements InventoryMovement[]
  organization       Organization        @relation(fields: [organizationId], references: [id])
  organizationId     String

  @@map("parts")
}

model PartsSale {
  id        String     @id @default(uuid())
  total     Float
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  vehicle   Vehicle    @relation(fields: [vehicleId], references: [id])
  vehicleId String
  seller    User       @relation(fields: [sellerId], references: [id])
  sellerId  String
  Part      Part[]
  saleItems SaleItem[]
  Client    Client?    @relation(fields: [clientId], references: [id])
  clientId  String?

  @@map("parts_sales")
}

model PartUsage {
  id        String  @id @default(uuid())
  quantity  Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId String
  part      Part    @relation(fields: [partId], references: [id])
  partId    String

  @@map("part_usages")
}

model SaleItem {
  id          String    @id @default(uuid())
  quantity    Int
  price       Float
  partsSale   PartsSale @relation(fields: [partsSaleId], references: [id])
  partsSaleId String
  part        Part      @relation(fields: [partId], references: [id])
  partId      String

  @@map("sale_items")
}

model LoyaltyBenefit {
  id          String       @id @default(uuid())
  level       LoyaltyLevel
  name        String
  description String
  discount    Float?

  @@map("loyalty_benefits")
}

model InventoryMovement {
  id             String       @id @default(uuid())
  part           Part         @relation(fields: [partId], references: [id])
  partId         String
  type           MovementType
  quantity       Int
  beforeStock    Int
  afterStock     Int
  reason         String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("inventory_movements")
}

enum MovementType {
  ENTRY // Entrada de inventario (compra, devoluci贸n)
  EXIT // Salida (venta, uso en servicio)
  ADJUSTMENT // Ajuste manual de stock
  TRANSFER // Transferencia entre almacenes (si aplica)
}

enum Role {
  ADMIN
  MANAGER
  MECHANIC
  RECEPTIONIST
}

enum ClientType {
  PERSONAL
  BUSINESS
}

enum LoyaltyLevel {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

enum ServiceType {
  WITH_VEHICLE
  WITHOUT_VEHICLE
}

enum ServiceStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PartCategory {
  ENGINE
  ELECTRICAL
  BRAKES
  SUSPENSION
  TRANSMISSION
  FILTERS
  FLUIDS
  TIRES
  ACCESSORIES
}
